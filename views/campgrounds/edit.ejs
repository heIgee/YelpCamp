<%- contentFor('title') %>
Edit Campground
<%- contentFor('body') %>
<div class="container">
    <div class="row mt-5">
        <div class="col-lg-8 offset-lg-2">
            <h1>Edit Campground</h1>
            <form class="form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate>
                <div class="mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" class="form-control" name="campground[title]" value="<%= campground.title %>" required>
                </div>
                <div class="row">
                    <div class="mb-2 col-sm-6 ps-0 pe-4">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" class="form-control" name="campground[location]" value="<%= campground.location %>" required>
                    </div>
                    <div class="mb-2 col-sm-6 px-0">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" id="price" class="form-control" name="campground[price]" value="<%= campground.price %>" aria-describedby="price-label" required min="0">
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <label for="images" class="form-label">Add Images</label>
                    <input class="form-control" type="file" name="images" accept="image/*" id="images" multiple>
                </div>
                <div id="image-preview" class="mt-3">
                </div>

                <script src="/js/imagePreview.js"></script>

                <div class="mb-2">
                    <label for="deleteImages[]" class="form-label">Delete Images</label>
                    <div>
                        <% campground.images.forEach(function (image, i) { %>
                        <div class="d-inline-block position-relative p-0">
                            <img class="yelp-camp-thumbnail" src="<%= image.thumbnail %>">
                            <input class="form-check-inline position-absolute top-0 end-0 me-3 mt-2 p-2" type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= image.filename %>">
                        </div>
                        <% }) %>
                    </div>
                </div>

                <div class="mb-2">
                    <label for="description" class="form-label">Description</label>
                    <textarea rows="4" id="description" class="form-control" name="campground[description]" required><%= campground.description %></textarea>
                </div>
                <button type="submit" class="my-2 me-1 btn btn-info">Confirm</button>
                <a href="/campgrounds/<%= campground._id %>">
                    <button type="button" class="my-2 btn btn-secondary">Back</button>
                </a>
            </form>
        </div>
    </div>
</div>
<script src="/js/formValidate.js">