<%- contentFor('title') %>
YelpCamp - Register
<%- contentFor('body') %>
<div class="row mt-5">
    <div class="col-md-8 offset-md-2 col-lg-4 offset-lg-4">
        <h1>Registration</h1>
        <form class="form" action="/register" method="POST" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" class="form-control" name="user[username]" value="<%= locals.userInput.username %>" autofocus required>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" class="form-control" name="user[email]" value="<%= locals.userInput.email %>" required>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" value="<%= locals.userInput.password %>" name="user[password]" required>
            </div>

            <button type="submit" class="my-2 btn btn-info">Register</button>

        </form>
    </div>
</div>
<script src="/js/formValidate.js"></script>